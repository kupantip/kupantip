model announcement {
  id        String    @id(map: "PK__announce__3213E83F24BAF726") @default(dbgenerated("newsequentialid()"), map: "DF__announcement__id__656C112C") @db.UniqueIdentifier
  author_id String    @db.UniqueIdentifier
  title     String    @db.NVarChar(300)
  body_md   String    @db.NVarChar(Max)
  create_at DateTime  @default(now(), map: "DF__announcem__creat__66603565") @db.DateTime
  start_at  DateTime  @db.DateTime
  end_at    DateTime  @db.DateTime
  delete_at DateTime? @db.DateTime
  app_user  app_user  @relation(fields: [author_id], references: [id], onUpdate: NoAction, map: "FK__announcem__autho__7C4F7684")
